              <p>{{service.providerID.name}}</p>
              <p>{{service.providerID.imgPath}}</p>
              <p>{{service.customerID.imgPath}}</p>
              <p>{{service.customerID.name}}</p>
              <p>{{service.name}}</p>
              <p>{{service.description}}</p>
              <p>{{service.startDate}}</p>
              <p>{{service.deadLine}}</p>
              <p>{{service.price}}</p>
              <p>{{service.description}}</p>
              <p>{{service.status}}</p>
              <p>{{service.description}}</p>
              <p>{{service.status}}</p>
            </div>
          </div>
        </a>
      </div>
    </div>
  </div>
</section>
