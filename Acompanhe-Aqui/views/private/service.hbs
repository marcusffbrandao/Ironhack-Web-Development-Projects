<section id="home-container">

  <div id="home-services">
    <h3>Meus serviços:</h3>
    {{!-- <h3>Meus serviços: {{provider.username}}</h3> --}}

    <div id="services" class="card-deck">
      <div class="service">
        <a href="/service/{{_id}}">
          <div class="card" style="width: 14rem;">
            <img src="{{service.customerID.imgPath}}" class="customer-picture card-img-top" alt="...">
            <div class="card-body">
              <!-- puxar apenas primeiro e último nome ou apenas o username(15 letras no máximo) -->
